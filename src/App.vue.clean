  { name: 'Vue.js', level: 85, icon: 'fab fa-vuejs' },
  { name: 'Docker', level: 82, icon: 'fab fa-docker' },
  { name: 'Git', level: 90, icon: 'fab fa-git-alt' },
  { name: 'IA', level: 80, icon: 'fas fa-brain' },
  { name: 'API', level: 92, icon: 'fas fa-network-wired' }
