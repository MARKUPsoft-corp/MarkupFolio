  z-index: 1;
  border-radius: 50%;
}

.circle-content img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 50%;
  transition: transform 0.5s ease;
}

.circle-frame:hover img {
  transform: scale(1.05);
}

/* Anneau autour du cercle */
.circle-ring {
  position: absolute;
  width: 440px;
  height: 440px;
  border-radius: 50%;
  border: 2px solid var(--primary-transparent);
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* Anneau orange pour l'orbite des technologies */
.orbit-ring-orange {
  position: absolute;
  width: 520px; /* Correspondant au rayon de l'orbite des technologies (260px) */
  height: 520px;
  border-radius: 50%;
  border: 6px dashed var(--accent);
  opacity: 0.65;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 3;
  box-shadow: 0 0 15px rgba(255, 107, 53, 0.3);
  animation: rotateRingOrange 35s linear infinite;
}

/* Effet de surbrillance au survol de l'image */
.circle-frame:hover ~ .orbit-ring-orange {
  opacity: 0.8;
  box-shadow: 0 0 25px rgba(255, 107, 53, 0.4);
}

@keyframes rotateRingOrange {
  0% { transform: translate(-50%, -50%) rotate(0deg); }
  100% { transform: translate(-50%, -50%) rotate(-360deg); }
}

/* Modification légère de l'animation de flottement pour plus de simplicité */
@keyframes float {
  0% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
  100% { transform: translateY(0px); }
}

/* Technologies en orbite */
.orbit-skills-container {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 4;
  transition: opacity 0.6s ease, transform 0.8s ease;
}

.grid-skills-container {
  position: absolute;
  top: 0;
  right: -50px;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20px;
  opacity: 0;
  transform: translateX(30px);
  pointer-events: none;
  z-index: 4;
  transition: all 0.6s ease;
}

.orbit-skill {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(var(--angle)) translateX(var(--orbit-radius, 260px));
  z-index: 4;
  transition: all 0.5s ease;
}

.grid-skill {
  animation: floatSkill 4s ease-in-out infinite;
  animation-delay: var(--delay);
  transition: all 0.3s ease;
  opacity: 0;
  transform: translateY(20px);
}

@keyframes floatSkill {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}

.skill-bubble {
  width: 60px;
  height: 60px;
  background-color: var(--card-bg);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  color: var(--primary);
  font-size: 1.7rem;
  border: 3px solid rgba(0, 171, 145, 0.3);
  transform: rotate(calc(-1 * var(--angle)));
  transition: all 0.3s ease;
}

.grid-skill .skill-bubble {
  transform: none;
}

.skill-bubble:hover {
  color: var(--accent);
  transform: rotate(calc(-1 * var(--angle))) scale(1.3);
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2),
              0 0 15px var(--primary-transparent);
  border-color: var(--accent);
  background-color: rgba(255, 255, 255, 0.9);
}

.grid-skill .skill-bubble:hover {
  transform: scale(1.3);
}

/* Ajout d'un traînage lumineux aux bulles en orbite */
.skill-bubble::after {
  content: '';
  position: absolute;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: radial-gradient(circle, var(--primary-transparent) 0%, transparent 70%);
  filter: blur(8px);
  opacity: 0.5;
  z-index: -1;
  transition: all 0.3s ease;
}

.skill-bubble:hover::after {
  opacity: 0.8;
  transform: scale(1.5);
  background: radial-gradient(circle, var(--accent-transparent) 0%, transparent 70%);
}

@keyframes orbit {
  0% {
    transform: translate(-50%, -50%) rotate(0deg) translateX(var(--orbit-radius));
  }
  100% {
    transform: translate(-50%, -50%) rotate(360deg) translateX(var(--orbit-radius));
  }
}

/* Section À propos */
.section {
  padding: 100px 0;
  position: relative;
  overflow: hidden;
}

.section::before {
  content: '';
  position: absolute;
  width: 300px;
  height: 300px;
  background: radial-gradient(circle, var(--primary-transparent) 0%, transparent 70%);
  filter: blur(80px);
  opacity: 0.5;
  z-index: -1;
  border-radius: 50%;
}

#about::before {
  top: 10%;
  left: 0;
}

#portfolio::before {
  bottom: 5%;
  right: 0;
  background: radial-gradient(circle, var(--accent-transparent) 0%, transparent 70%);
}

#contact::before {
  top: 30%;
  left: 30%;
  width: 250px;
  height: 250px;
  background: radial-gradient(circle, var(--primary-light-transparent) 0%, transparent 70%);
}

.section-header {
  text-align: center;
  margin-bottom: 50px;
  opacity: 0;
  transform: translateY(20px);
  transition: all 0.8s ease;
}

.section-header.in-view {
  opacity: 1;
  transform: translateY(0);
}

.section-header h2 {
  position: relative;
  display: inline-block;
  padding-bottom: 10px;
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 15px;
  color: var(--text-main);
}

.section-header p {
  color: var(--text-secondary);
  max-width: 600px;
  margin: 0 auto;
  font-size: 1.1rem;
}

.accent {
  color: var(--primary);
}

/* Compétences avec icônes */
.about-content {
  max-width: 800px;
  margin: 0 auto;
  opacity: 0;
  transform: translateY(30px);
  transition: all 0.8s ease;
}

.about-content.in-view {
  opacity: 1;
  transform: translateY(0);
}

.about-text p {
  margin-bottom: 30px;
  line-height: 1.7;
  color: var(--text-secondary);
}

.skills-list {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.skill-item {
  width: 100%;
  transition: transform 0.3s ease;
}

.skill-item:hover {
  transform: translateX(5px);
}

.skill-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}

.skill-name {
  font-weight: 600;
  color: var(--text-main);
  display: flex;
  align-items: center;
  gap: 10px;
}

.skill-icon {
  color: var(--primary);
}

.skill-percentage {
  color: var(--accent);
  font-weight: 600;
}

.skill-progress-bar {
  height: 10px;
  background-color: var(--bg-alt);
  border-radius: 5px;
  overflow: hidden;
  position: relative;
}

.skill-progress-bar::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  animation: shimmer 2s infinite;
  transform: translateX(-100%);
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

.skill-progress {
  height: 100%;
  background: linear-gradient(90deg, var(--primary), var(--accent));
  border-radius: 5px;
  transition: width 1.2s cubic-bezier(0.65, 0, 0.35, 1);
}

/* Portfolio */
.projects-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
  gap: 30px;
  margin-top: 40px;
  opacity: 0;
  transform: translateY(30px);
  transition: all 0.8s ease;
}

.projects-grid.in-view {
  opacity: 1;
  transform: translateY(0);
}

.project-card {
  position: relative;
  border-radius: 16px;
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  box-shadow: var(--shadow-md);
  height: 250px;
  transform: translateY(20px);
  opacity: 0;
}

.project-card.in-view {
  transform: translateY(0);
  opacity: 1;
  animation: fadeInStaggered 0.8s ease forwards;
}

.projects-grid .project-card:nth-child(1) { animation-delay: 0.1s; }
.projects-grid .project-card:nth-child(2) { animation-delay: 0.3s; }
.projects-grid .project-card:nth-child(3) { animation-delay: 0.5s; }
.projects-grid .project-card:nth-child(4) { animation-delay: 0.7s; }

.project-image {
  position: relative;
  overflow: hidden;
}

.project-image::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, transparent 0%, rgba(0, 0, 0, 0.3) 100%);
  z-index: 1;
}

.project-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 1s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.project-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.9), transparent);
  opacity: 0;
  transition: all 0.4s ease;
  display: flex;
  align-items: flex-end;
  padding: 25px;
}

.project-card:hover {
  transform: translateY(-15px) scale(1.02);
  box-shadow: var(--shadow-lg),
              0 0 30px var(--primary-transparent);
}

.project-card:hover .project-image img {
  transform: scale(1.08);
}

.project-card:hover .project-overlay {
  opacity: 1;
}

.project-content {
  color: white;
  transform: translateY(20px);
  transition: transform 0.4s ease;
}

.project-card:hover .project-content {
  transform: translateY(0);
}

.project-category {
  display: inline-block;
  background: var(--primary);
  color: white;
  padding: 5px 10px;
  border-radius: 20px;
  font-size: 0.8rem;
  margin-bottom: 10px;
}

.project-title {
  font-size: 1.5rem;
  margin-bottom: 10px;
}

.project-description {
  font-size: 0.9rem;
  margin-bottom: 15px;
  opacity: 0.8;
}

.project-link {
  color: white;
  font-weight: 600;
  position: relative;
}

.project-link::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 2px;
  background-color: var(--accent);
  left: 0;
  bottom: -3px;
}

/* Contact */
.contact-container {
  display: grid;
  grid-template-columns: 1fr 2fr;
  gap: 40px;
  opacity: 0;
  transform: translateY(30px);
  transition: all 0.8s ease;
}

.contact-container.in-view {
  opacity: 1;
  transform: translateY(0);
}

.contact-info {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.contact-info .contact-card {
  opacity: 0;
  transform: translateX(-20px);
}

.contact-container.in-view .contact-card {
  animation: slideInFromLeft 0.6s ease forwards;
}

.contact-container.in-view .contact-card:nth-child(1) { animation-delay: 0.1s; }
.contact-container.in-view .contact-card:nth-child(2) { animation-delay: 0.3s; }
.contact-container.in-view .contact-card:nth-child(3) { animation-delay: 0.5s; }

.contact-card {
  background-color: var(--card-bg);
  padding: 20px;
  border-radius: 15px;
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--border-color);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.contact-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-md);
  border-left: 3px solid var(--primary);
}

.contact-icon {
  font-size: 1.5rem;
  color: var(--primary);
  margin-bottom: 15px;
}

.contact-card h3 {
  font-size: 1.2rem;
  margin-bottom: 10px;
}

.contact-card p {
  color: var(--text-secondary);
}

.contact-form-container {
  background-color: var(--card-bg);
  padding: 30px;
  border-radius: 15px;
  box-shadow: var(--shadow-md);
  border: 1px solid var(--border-color);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  opacity: 0;
  transform: translateX(20px);
}

.contact-container.in-view .contact-form-container {
  animation: slideInFromRight 0.6s ease forwards 0.3s;
}

.contact-form-container:hover {
  box-shadow: var(--shadow-lg);
}

.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
  margin-bottom: 20px;
}

.form-group {
  margin-bottom: 20px;
}

.form-group label {
  display: block;
  margin-bottom: 8px;
  font-weight: 600;
  color: var(--text-main);
}

.form-group input,
.form-group textarea {
  width: 100%;
  padding: 15px;
  border: 2px solid var(--border-color);
  border-radius: 10px;
  background-color: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(5px);
  transition: all 0.3s ease;
  color: var(--text-main);
}

.form-group input:focus,
.form-group textarea:focus {
  border-color: var(--primary);
  box-shadow: 0 0 0 3px var(--primary-transparent);
  outline: none;
  transform: translateY(-2px);
}

.form-group input:focus + label,
.form-group textarea:focus + label {
  color: var(--primary);
}

/* Animations supplémentaires */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInStaggered {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInFromLeft {
  from {
    opacity: 0;
    transform: translateX(-20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes slideInFromRight {
  from {
    opacity: 0;
    transform: translateX(20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

